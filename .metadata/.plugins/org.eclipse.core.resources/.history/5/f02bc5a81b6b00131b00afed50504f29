#include "UserInput.h"

UserInput::UserInput() {
	//on initialise la liste des touches.
	for(int i = SDLK_FIRST; i < SDLK_LAST; i++){
		map.key[i] = false;
		map.timers[i] = new Timer();
	}
}

UserInput::~UserInput() {
	for(int i = SDLK_FIRST; i < SDLK_LAST; i++){
		delete map.timers[i];
	}
}

