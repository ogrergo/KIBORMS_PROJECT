#include "World.h"
#include <Box2D/Box2D.h>

World::World(int fps) {
	FRAME_RATE = fps;
	time_per_frame = 1.0/((double) FRAME_RATE);
	b2Vec2 gravity(0, -9.8);
	physicBox = new b2World(gravity);
}

World::~World() {
	  delete physicBox;
}

void World::update(){
	physicBox->Step(time_per_frame, );
}

void World::render(){

}

