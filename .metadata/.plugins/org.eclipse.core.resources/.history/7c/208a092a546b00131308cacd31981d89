#ifndef USERINPUT_H_
#define USERINPUT_H_

#include <SDL/SDL.h>
#include "Timer/Timer.h"

class UserInput {
public:

	UserInput();
	virtual ~UserInput();

	void handle_SDLevent(SDL_Event* event);

private:
	typedef struct {
		bool key[SDLK_LAST];
		Timer* timers[SDLK_LAST];
		Uint16 x,y;
		bool mouse_key[3];
		Timer* mouse_timer[3];
	} KeyMap;

	KeyMap map;
};

#endif /* USERINPUT_H_ */
